}

/* Chrome, Safari, Opera */
@-webkit-keyframes example {
	from { 
		transform : translateX(0%) 
	} 50% { 
		transform : translateX(0%) 
	} 51% { 
		transform : translateX(0%)
	} 90% {
		 transform : translateX(-100%)
	} 100% { 
		transform : translateX(-50%) 
	} to { 
		transform : translateX(0%) 
	}
}

/* Standard syntax */
